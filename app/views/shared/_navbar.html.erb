  <div class="navbar d-flex justify-content-around fixed-bottom">
    <% if user_signed_in? %>
      <%= link_to "/" do %>
        <i class="fas fa-home home-icon"></i>
      <% end %> 
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      <%= link_to :back do %>
        <i class="fas fa-chevron-left return-icon"></i> 
      <% end %>
    <% else %>
      <%= link_to "/" do %>
        <i class="fas fa-home home-icon"></i>
      <% end %> 
      <%= link_to "Login", new_user_session_path %>
      <%= link_to :back do %>
        <i class="fas fa-chevron-left return-icon"></i> 
      <% end %>
    <% end %>
  </div>
