<div class="navbar d-flex justify-content-around fixed-bottom">
  <% if user_signed_in? %>
    <%= link_to :back do %>
      <i class="fas fa-chevron-left return-icon"></i> 
    <% end %>
    <%= link_to "/" do %>
      <i class="fas fa-home home-icon"></i>
    <% end %> 
    <div class="nav-item dropup">
      <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropup", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu navbar-bg text-white dropdown-menu-right" aria-labelledby="navbarDropup">
        <%= link_to "My bookings", bookings_path, class: "dropdown-item text-white" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item text-white" %>
      </div>
    </div>
  <% else %>
    <%= link_to :back do %>
      <i class="fas fa-chevron-left return-icon"></i> 
    <% end %>
    <%= link_to "/" do %>
      <i class="fas fa-home home-icon"></i>
    <% end %> 
    <%= link_to "Login", new_user_session_path, class: "nav-link" %>
  <% end %>
</div>


