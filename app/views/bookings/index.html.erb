<div class="col-sm-12 d-flex justify-content-center">
  <h1 id="bookingtitle" class= "px-3 py-1">My Booking list</h1>
</div>

<div class="d-flex row justify-content-center">
  <% @bookings.each do |booking| %>
    <% if (booking.user_id == current_user.id) %>
      <div class="booking card" style="width: 18rem;">
        <div class="card-header d-flex justify-content-center">
          <%= link_to booking_path(booking) do %>
            <h5 class="card-title fw-bolder"><%= booking.trip.name %> </h5>
          <% end %>
        </div>
        <div class="card-body d-flex justify-content-center ">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"> <strong>Location:</strong> <%= booking.trip.address %></li>
            <li class="list-group-item"> <strong>Schedule date:</strong> <%= booking.schedule_date %></li>
            <li class="list-group-item"> <strong>Price:</strong> Rs<%= booking.trip.price.to_i %></li>
            <li class="list-group-item p-0 pt-2 text-center">
              <%= link_to booking_path(booking), method: :delete do %> 
               <i class="fas fa-trash-alt"></i>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
