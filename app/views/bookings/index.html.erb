<h1>My booking list</h1>
<div class="d-flex row justify-content-center">
  <% @bookings.each do |booking| %>
    <% if (booking.user_id == current_user.id) %>
      <div class="col-lg-2 h-5 justify-content-center m-2">
        <div class="card bg-light">
          <div class="card-body d-flex justify-content-between">
            <%= link_to booking_path(booking) do %>
              <h5 class="card-title fw-bolder"><%= booking.trip.name %> </h5>
              <%= link_to booking_path(booking), method: :delete do %> 
                <i class="fas fa-trash-alt"></i>
              <% end %>
            <% end %>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"> Location:</li>
            <li class="list-group-item"> schedule date: <%= booking.schedule_date %></li>
            <li class="list-group-item"> Price: Rs<%= booking.trip.price.to_i %></li>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="card-body d-flex justify-content-center">
    <%= link_to "Back To Trips List",  trips_path, class: "btn btn-secondary"%>
  </div>
</div>
