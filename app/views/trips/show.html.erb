<div class="d-flex justify-content-center align-items-center">
  <div class="row justify-content-center align-items-center w-100">
    <div class="col-sm-12 d-flex justify-content-center">
      <div class="my-3">
      <%= @trip.name %>
        <%= image_tag("logo.png", width: "70px", height: "70px") %>
      </div>
    </div>

    <div class="col-sm-12 " >
      <p>Your destination: <%= @trip.name %> </p>
        <%= image_tag(@trip.image_url, height: 200, width: 200) %>
    </div>

    <div class="details" class="border-bottom" >
      <p>About the trip:</p>
        <%= @trip.description %>
      <p>Your starting point:</p>
        <%= @trip.address %>
      <p>Price:</p>
        Rs <%= @trip.price %>
    </div>

    <div  class="col-sm-12 d-flex justify-content-center">
        <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-directions/v4.1.0/mapbox-gl-directions.js"></script>
        <link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-directions/v4.1.0/mapbox-gl-directions.css" type="text/css">
        <div id="map"
            style="width: 100%; height: 40vh;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>
    <div class="col-sm-12 d-flex justify-content-center">
      <div class="sub-choice">
        <%= link_to 'Go on this trip', '#', class: "glass" %>
      </div>
    </div>
  </div>
</div>

