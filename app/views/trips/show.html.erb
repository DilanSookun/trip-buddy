<div class="d-flex flex-wrap justify-content-center">
  <div class="col-sm-12 d-flex flex-wrap justify-content-center">
    <div class="d-flex flex-wrap justify-content-center text-center" >
      <h2> <%= @trip.name %> </h2>
      <%= image_tag(@trip.image_url, height: 300, width: 350, style: "border-radius: 10px;") %>
    </div>
    <div class="col-sm-12 details mt-3" class="border-bottom" >
      <h4>About the trip:</h4>
        <%= @trip.description %>
      <h5>Destination address :</h5>
        <p><%= @trip.address %></p>
      <h5>Price: Rs <%= @trip.price %></h5>
    </div>
    <div class="col-sm-12 d-flex justify-content-center">
      <div class="sub-choice">
        <%= simple_form_for(@booking) do |f| %>
          <%= f.hidden_field :total_price, :value => @trip.price %>
          <%= f.hidden_field :trip_id, :value => @trip.id %>
          <%= f.input :schedule_date, as: :date,
                      start_year: Date.today.year,
                      end_year: Date.today.year+1, discard_day: false,
                      order: [:day, :month, :year] %>
          <%= f.button :submit, class: "btn btn-secondary", value: "Confirm Booking" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="w-100 m-0">
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-directions/v4.1.0/mapbox-gl-directions.js"></script>
    <link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-directions/v4.1.0/mapbox-gl-directions.css" type="text/css">
    <div id="map"
        style="width: 100%; height: 67vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>

